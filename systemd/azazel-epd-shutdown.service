[Unit]
Description=Azazel EPD Final Clear (shutdown hook)
DefaultDependencies=no
Before=poweroff.target halt.target shutdown.target

[Service]
Type=oneshot
User=root
ExecStart=/bin/bash -lc '/usr/bin/python3 /home/azazel/Azazel-Zero/py/boot_splash_epd.py --mode shutdown || true'
TimeoutStartSec=6s

[Install]
WantedBy=poweroff.target halt.target shutdown.target